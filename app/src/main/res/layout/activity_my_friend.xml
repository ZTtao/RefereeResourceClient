<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f0f0f0">
    <include layout="@layout/title"/>
    <LinearLayout
        android:id="@+id/ly_my_friend_new"
        android:layout_width="match_parent"
        android:layout_height="60dp" android:orientation="horizontal"
        android:background="#f0f0f0" android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/icon_friend_request"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/img_red_hint_new_friend"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/mainpage_red_hint"
                android:visibility="gone"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新的朋友"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"/>
    <ListView
        android:id="@+id/lv_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>