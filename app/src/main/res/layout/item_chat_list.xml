<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0">
    <RelativeLayout
        android:id="@+id/ly_chat_list_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_chat_list_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="#d0d0d0"/>
        <ImageView
            android:id="@+id/img_red_hint_chat_list"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/mainpage_red_hint"
            android:visibility="gone"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_chat_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ly_chat_list_avatar"
        android:textColor="#000000"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/tv_chat_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ly_chat_list_avatar"
        android:layout_below="@+id/tv_chat_list_name"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/tv_chat_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_alignBaseline="@+id/tv_chat_list_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_chat_list_content"/>
</RelativeLayout>