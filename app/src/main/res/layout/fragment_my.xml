<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#d0d0d0"/>
    <RelativeLayout
        android:id="@+id/ly_user_fragment_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_avatar_fragment_my"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/default_avatar"/>
        <TextView
            android:id="@+id/tv_user_name_fragment_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userUSER"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/img_avatar_fragment_my"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#d0d0d0"/>
    <RelativeLayout
        android:id="@+id/ly_my_post_fragment_my"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f0f0f0">
        <ImageView
            android:id="@+id/img_first_fragment_my"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_my_post"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_first_fragment_my"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="我的帖子"
            android:textSize="17sp"
            android:textColor="#000000"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"/>
    <RelativeLayout
        android:id="@+id/ly_my_review_fragment_my"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f0f0f0">
        <ImageView
            android:id="@+id/img_second_fragment_my"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_my_review"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_second_fragment_my"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="我的评论"
            android:textSize="17sp"
            android:textColor="#000000"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"/>
    <RelativeLayout
        android:id="@+id/ly_like_post_fragment_my"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f0f0f0">
        <ImageView
            android:id="@+id/img_third_fragment_my"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_third_fragment_my"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:text="喜欢的帖子"
            android:textSize="17sp"
            android:textColor="#000000"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"/>
</LinearLayout>