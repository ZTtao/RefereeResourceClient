<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0">
    <TextView
        android:id="@+id/tv_mainpage_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="testtesttest测试题目测试题目testtesttest测试题目测试题目testtesttest测试题目测试题目testtesttest测试题目测试题目"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="17sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/tv_mainpage_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="testcontent阿萨德股份撒规范第三阿士大夫撒撒范德萨测试内容testcontent测试内容testcontent测试内容testcontent测试内容"
        android:textSize="16sp"
        android:textColor="#505050"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tv_mainpage_list_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="useruser"
            android:textColor="#5cacee"
            android:textSize="14sp"
            android:layout_marginLeft="24dp"/>
        <TextView
            android:id="@+id/tv_mainpage_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-07-07 22:08"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_toRightOf="@id/tv_mainpage_list_author"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_mainpage_list_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_toLeftOf="@+id/tv_mainpage_list_slash"/>
        <TextView
            android:id="@+id/tv_mainpage_list_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_toLeftOf="@+id/tv_mainpage_list_read"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_mainpage_list_read"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"
        android:layout_marginTop="10dp"/>
</LinearLayout>